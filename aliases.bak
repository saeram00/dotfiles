# Clear screen and history for privacy and security
alias hsc='history -c'
alias clh='clear && history -c'
alias cls='clear && ls'
alias cll='clear && ls -AhlF'
alias cla='clear && ls -AF'

# Resource management
alias df='df -h'
alias free='free -h'
alias du='du -h'

# Network
alias wget='wget --show-progress'

# Programs
alias vim='vim.nox'
alias nv='nvim'
alias nvdiff='nvim -d'

# Authentication
alias git-ssh='ssh -T saeram-github'
alias ssh-start-agent='eval $(ssh-agent -s)'
