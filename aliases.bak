# Network
alias wget='wget --show-progress'
alias swget='wget --show-progress --https-only --secure-protocol=TLSv1_3'
alias scurl='curl --tlsv1.3 --proto "=https"'
alias scurl-dl='curl --tlsv1.3 --proto "=https" --location --remote-name'

