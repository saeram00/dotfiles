# File management
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -Iv'
alias sln='ln -siv'
alias chmod='chmod -v'

# Resources check
alias df='df -h' 
alias free='free -h'

# Clear history and screen
alias hsc='history -c'
alias clh='clear && history -c'
alias cll='clear && ls -alhF'
alias cla='clear && ls -A'

# Network
alias wget='wget --show-progress'

# Programs
alias vim='vim.nox'
alias py8='python3.8'
alias py9='python3.9'

# Python projects virtual environments
alias vpy9='source ~/projects/scripts/python/general-venv/py9-venv/bin/activate'
